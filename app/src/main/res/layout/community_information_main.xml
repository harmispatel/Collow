<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/black"

                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"

                    >

                </android.support.v4.view.ViewPager>


                <RelativeLayout
                    android:id="@+id/button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/left_nav"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"


                        android:src="@drawable/left_arrow_tran" />

                    <ImageView

                        android:id="@+id/right_nav"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:src="@drawable/right_arrow_tran" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageview_follow"
                    android:layout_gravity="right|top"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:src="@drawable/unselect_heart" />
            </FrameLayout>


            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_communityinformation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/textsize_medium" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_communityinformation_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/textsize_small" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_communityinformation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/textsize_medium" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_communityinformation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/textsize_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_communityinformation_contact"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/community_mobile" />

                <com.app.collow.baseviews.BaseTextview
                    android:id="@+id/textview_communityinformation_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <include
                layout="@layout/horizontal_seperator_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"></include>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_communityinformation_email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/community_email" />

                <com.app.collow.baseviews.BaseTextview
                    android:id="@+id/textview_communityinformation_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <include
                layout="@layout/horizontal_seperator_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"></include>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_communityinformation_fax"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/community_fax" />

                <com.app.collow.baseviews.BaseTextview
                    android:id="@+id/textview_communityinformation_fax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <include
                layout="@layout/horizontal_seperator_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"></include>

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_communityinformaton_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/line_color_gray"
                android:padding="5dp"
                android:text="AMENITIES"
                android:visibility="gone" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:text="@string/no_amenities_found"
                android:visibility="gone" />

        </LinearLayout>

        <!-- =========== RANDOM VIEWS ADDED ABOVE RecyclerView ================== -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view_amenities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        </android.support.v7.widget.RecyclerView>

        <!-- =========== RANDOM VIEWS ADDED BELOW RecyclerView ================== -->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>