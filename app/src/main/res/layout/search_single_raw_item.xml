<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/layout_cardview_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageview_search_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"

                    android:layout_centerInParent="true"

                    android:scaleType="fitXY"
                    android:src="@drawable/defualt_square" />


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_search_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalized Family Canoe Art Personalized Family Canoe Art"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_medium" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_search_community_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:text="Decor Decor DecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecor"
                android:textColor="@color/left_Menu_text_color_gray"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_search_community_city_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="Decor Decor DecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecor"
                android:textColor="@color/left_Menu_text_color_gray"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_search_community_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="Decor Decor DecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecor"
                android:textColor="@color/left_Menu_text_color_gray"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_search_community_placeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="Decor Decor DecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecorDecor"
                android:textColor="@color/left_Menu_text_color_gray"
                android:textSize="@dimen/common_text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_home_in_search_result"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/home_icon"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/layout_cardview_image"
        android:background="@color/line_color_gray"
        android:orientation="vertical">


    </View>
</LinearLayout>