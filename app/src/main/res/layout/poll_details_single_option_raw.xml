<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1.2"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageview_create_polls_circle_selected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/poll_selected" />
            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_each_option_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18%"
                android:textSize="@dimen/common_text_size"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textStyle="bold"/>


        </RelativeLayout>


        <View
            android:id="@+id/view_verticle_line_create_polls"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/blue_color_my_post_text"></View>

        <com.app.collow.baseviews.BaseTextview

            android:id="@+id/textview_create_polls_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="left"
            android:text="@string/enter_poll_question"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:background="@android:color/transparent"

            android:textColor="@color/edittext_text_color"
            android:textColorHint="@color/edittext_hint_color"
            android:textSize="@dimen/common_text_size" />


        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/basetextview_need_to_diplay_empty_marker"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/holo_red_dark"/>

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/basetextview_need_to_diplay_for_admin_results"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/left_Menu_text_color_gray"/>

    </LinearLayout>


</android.support.v7.widget.CardView>