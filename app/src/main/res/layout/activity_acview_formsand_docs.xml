<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acview_formsand_docs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.collow.activities.ACViewFormsandDocs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:weightSum="2">

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_docnametitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="@string/documentname"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_docname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:background="@android:color/transparent"
                android:text="jgjdkgj"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>

        <include layout="@layout/horizontal_seperator_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:weightSum="2">

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_descriptiontitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/description"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:text="skdfhf"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>

        <include layout="@layout/horizontal_seperator_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:weightSum="2">

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_uploaddatetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/uploaddate"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_uploaddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:background="@android:color/transparent"
                android:text="12 feb 2017"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>

        <include layout="@layout/horizontal_seperator_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:weightSum="2">

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_numofdownloadstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/numberofdownloads"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_acviewforms_numofdownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:background="@android:color/transparent"
                android:text="hfsfg"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>

        <include layout="@layout/horizontal_seperator_line"></include>


    </LinearLayout>

</RelativeLayout>
