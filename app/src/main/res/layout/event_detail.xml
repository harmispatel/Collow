<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_eventdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tincident magna ullamcuper..Einsten where's the"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold" />

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_eventdetail_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20, June-2016"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_eventdetail_likeicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email" />

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_eventdetail_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Likes"
            android:textAlignment="center"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageview_eventdetail_commenticon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/facebook" />

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_eventdetail_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Comments"
            android:textAlignment="center"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageview_eventdetail_viewicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/facebook" />

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_eventdetail_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Views"
            android:textAlignment="center"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <com.app.collow.baseviews.BaseTextview
        android:id="@+id/textview_eventdetail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cuase george wants to go with you dance..My best friend is my best compani.My best friend sits beside me in my class and we study together daily.I prepare my exams with my best friend and we try to get first rank in every term.We go to our school in our bicycle; we enjoy riding the bicycle together. I love my best friend and we will stay together forever"
        android:textSize="@dimen/common_text_size" />
</LinearLayout>


</RelativeLayout>