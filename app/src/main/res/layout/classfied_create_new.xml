<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">


    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <com.app.collow.baseviews.MyButtonView
            android:id="@+id/mybuttonview_create_classfied"
            style="@style/mybuttonViewStyle_save_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_edit_profile"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="@string/save" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:orientation="vertical">


                <include layout="@layout/horizontal_seperator_line"></include>


                <com.app.collow.baseviews.BaseEdittext
                    android:id="@+id/edittext_createclassification_title"
                    style="@style/myEditextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:gravity="left"
                    android:hint="@string/title"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/edittext_text_color"
                    android:textColorHint="@color/edittext_hint_color"

                    />

                <include layout="@layout/horizontal_seperator_line"></include>


                <com.app.collow.baseviews.BaseEdittext
                    android:id="@+id/edittext_createclassification_description"
                    style="@style/myEditextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:gravity="left"
                    android:hint="@string/description"
                    android:inputType="textMultiLine"
                    android:textColor="@color/edittext_text_color"
                    android:textColorHint="@color/edittext_hint_color"

                    />

                <include layout="@layout/horizontal_seperator_line"></include>

                <com.app.collow.baseviews.BaseEdittext
                    android:id="@+id/edittext_createclassification_price"
                    style="@style/myEditextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:gravity="left"
                    android:hint="@string/price"
                    android:inputType="numberDecimal"
                    android:textColor="@color/edittext_text_color"
                    android:textColorHint="@color/edittext_hint_color"

                    />

                <include layout="@layout/horizontal_seperator_line"></include>

                <RelativeLayout
                    android:id="@+id/relativelayout_select_create_classfied_property_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background">


                    <com.app.collow.baseviews.BaseTextview
                        android:id="@+id/communtitytextview_create_classfied_property_type"
                        style="@style/myEditextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/layout_get_communties"
                        android:gravity="left"
                        android:hint="@string/select_propert_type"
                        android:textColor="@color/left_Menu_text_color_gray" />


                    <LinearLayout
                        android:id="@+id/layout_create_classfied_property_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progress_create_classfied_property_type"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"

                            android:padding="5dp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageview_create_classfied_property_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="15dp"
                            android:padding="5dp"

                            android:src="@drawable/updown_arrow" />

                    </LinearLayout>


                </RelativeLayout>

                <include layout="@layout/horizontal_seperator_line"></include>

                <RelativeLayout
                    android:id="@+id/relativelayout_select_create_classfied_property_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background">


                    <com.app.collow.baseviews.BaseTextview
                        android:id="@+id/communtitytextview_create_classfied_property_categoty"
                        style="@style/myEditextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/layout_get_communties"
                        android:gravity="left"
                        android:hint="@string/select_category"
                        android:textColor="@color/left_Menu_text_color_gray" />


                    <LinearLayout
                        android:id="@+id/layout_create_classfied_property_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progress_create_classfied_property_category"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="4dp"

                            android:padding="5dp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageview_create_classfied_property_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="15dp"
                            android:padding="5dp"

                            android:src="@drawable/updown_arrow" />

                    </LinearLayout>


                </RelativeLayout>
                <include layout="@layout/horizontal_seperator_line"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_grid_create_classfied"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="90dp"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:numColumns="auto_fit"
                        android:padding="10dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/relativelayout_upload_create_classfied_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:visibility="visible">

                        <com.app.collow.baseviews.BaseTextview
                            android:id="@+id/communtitytextview_editprofile_select_your_interest"
                            style="@style/myEditextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/layout_get_interesets"
                            android:gravity="left"
                            android:hint="@string/uploadimages"
                            android:textColor="@color/left_Menu_text_color_gray"

                            />


                        <ImageView
                            android:id="@+id/imageview_upload_image_plus_icon"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:src="@drawable/plus_icon" />


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>