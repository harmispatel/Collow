<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageview_message_profileimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/cicle_background"
                android:paddingLeft="10dp"
                android:src="@drawable/user_defualt_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/imageview_message_profileimage"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">



                    <com.app.collow.baseviews.BaseTextview
                        android:id="@+id/textview_message_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jaffery Simpson"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="@dimen/common_text_size"
                        />



                    <LinearLayout
                        android:id="@+id/layout_right_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">







                        <com.app.collow.baseviews.BaseTextview
                            android:id="@+id/textview_message_received_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Chat"
                            android:textSize="@dimen/textsize_small" />

                        <ImageView
                            android:id="@+id/imageview_communityactivity_communitycategory"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:visibility="visible"
                            android:src="@drawable/watch_my_activity" />
                    </LinearLayout>


                </RelativeLayout>




            </LinearLayout>
        </RelativeLayout>
    <com.app.collow.baseviews.BaseTextview
        android:id="@+id/textview_message_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Application from devleoper"
        android:textSize="@dimen/textsize_small" />

</LinearLayout>


