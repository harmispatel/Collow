<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview_acnewpoll"
        android:layout_width="wrap_content"
        android:layout_height="249dp" />

    <com.app.collow.baseviews.MyButtonView
        android:layout_width="150dp"
        android:id="@+id/button_claimcommunity_proceed"
        android:text="@string/proceed"
        android:background="@drawable/button_bluebackground"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_medium"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="35dp"

        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <com.app.collow.baseviews.MyButtonView
        android:layout_width="150dp"
        android:id="@+id/button_claimcommunity_newteam"
        android:text="@string/newteam"
        android:background="@drawable/button_bluebackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textsize_medium"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
</RelativeLayout>
</LinearLayout>