<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.app.collow.baseviews.BaseTextview
        android:id="@+id/textview_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="18"
        android:textSize="@dimen/textsize_big" />

    <com.app.collow.baseviews.BaseTextview
        android:id="@+id/textview_event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_event_date"
        android:layout_marginLeft="15dp"
        android:text="Friday"
        android:textSize="@dimen/textsize_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/textview_event_date"
        android:orientation="vertical">

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_event_daytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="All day"
            android:textSize="@dimen/common_text_size" />
        <!-- <LinearLayout
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="11dp"
             android:layout_height="wrap_content">

 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_event_bullet"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_event_eventtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="following you"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />


        </LinearLayout>
        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="7:15"
            android:textSize="@dimen/common_text_size" />
        <!--</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:layout_height="wrap_content">-->

    </LinearLayout>
</RelativeLayout>