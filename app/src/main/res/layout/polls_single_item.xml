<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_polls_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tincident magna ullamcuper"
            android:textSize="@dimen/textsize_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_polls_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="votes"
                android:textSize="@dimen/common_text_size" />

            <com.app.collow.baseviews.BaseTextview
                android:id="@+id/textview_polls_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Hours ago"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:src="@drawable/rightarrow" />
</LinearLayout>