<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_header_main_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_left_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_left_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"

            android:layout_marginLeft="15dp"

            android:background="@android:color/transparent"
            android:src="@drawable/left_menu_icon"
            android:visibility="gone" />

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_left_side_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"

            android:drawablePadding="5dp"
            android:gravity="center"

            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <com.app.collow.baseviews.BaseTextview
        android:id="@+id/textview_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxLength="15"

        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_searchevent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/colorWhite"
        android:drawableRight="@drawable/ic_action_cross"
        android:hint="Search Event"
        android:maxLines="1"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/layout_right_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_right_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.app.collow.baseviews.BaseTextview
            android:id="@+id/textview_right_side_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginRight="8dp"

            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_search_items"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"

                android:background="@android:color/transparent"

                android:src="@drawable/app_search_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_right_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"

                android:background="@android:color/transparent"
                android:src="@drawable/right_menu_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_community_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/community_main_menu"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/deleteicon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/editicon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/white_eye"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>