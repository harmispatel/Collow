<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_left_image_in_my_post"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/imageview_acfollowers_profilepic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/defualt_circle" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layout_left_image_in_my_post"
                android:gravity="center"


                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center|left"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:orientation="horizontal">

                                <com.app.collow.baseviews.BaseTextview
                                    android:id="@+id/textview_acfollowers_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="left"
                                    android:text="yutyuii"
                                    android:textStyle="bold"
                                    android:textColor="@color/left_Menu_text_color_gray"
                                    android:textSize="@dimen/textsize_medium" />


                            </LinearLayout>

                        </RelativeLayout>

                        <!-- <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="7dp"
                             android:orientation="horizontal">

                             <ImageView
                                 android:id="@+id/imageview_activity_watch"
                                 android:layout_width="15dp"
                                 android:layout_height="15dp"
                                 android:src="@drawable/watch_my_activity" />-->

                        <com.app.collow.baseviews.BaseTextview
                            android:id="@+id/textview_acfollowers_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="304,xchg,fjg"
                            android:textColor="@color/left_Menu_text_color_gray"
                            android:textSize="@dimen/common_text_size"
                          />
                        <!-- </LinearLayout>-->
                        <com.app.collow.baseviews.BaseTextview
                            android:id="@+id/textview_acfollowers_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="fhfjgjk"
                            android:textColor="@color/left_Menu_text_color_gray"
                            android:textSize="@dimen/textsize_small" />





                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imageview_aclistevent_rightarrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_gray_arrow" />
                </RelativeLayout>


                <include
                    layout="@layout/horizontal_seperator_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"

                    android:layout_marginTop="20dp"></include>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>